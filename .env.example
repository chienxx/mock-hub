# 数据库配置
DATABASE_URL="mysql://root:password@localhost:3306/mockdb"

# Redis配置
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""  # 可选：单独配置密码

# NextAuth配置
NEXTAUTH_URL="http://localhost:3000"
# 重要：生产环境必须设置一个安全的密钥（至少32个字符）
# 可以使用命令生成: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key"
# 信任指定主机，更安全的方式（根据实际部署环境修改）
# 例如：AUTH_TRUST_HOST="your-domain.com:3000,localhost:3000"
AUTH_TRUST_HOST="localhost:3000"

# 系统配置
NODE_ENV="development"
PORT=3000

IGNORE_SSL_ERRORS=true

# 日志清理配置
LOG_RETENTION_DAYS=90  # API日志保留天数，默认90天

# 应用访问地址配置（可选）
# 用于生成 Mock API URL，复制功能等
# 如果不设置，会自动使用浏览器当前地址
# 只有在特殊情况下需要固定 URL 时才需要配置
# 例如：NEXT_PUBLIC_APP_URL="http://192.168.131.219:3000"
NEXT_PUBLIC_APP_URL=""
